{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/multipletwigs/Malaysia-COVID-Analysis/main/COVID-Data/COVID-19%20Statistics/epidemic/cases_malaysia.csv"
    },
    "transform": [
        {
            "calculate": "timeParse(datum['date'], '%d/%m/%Y')",
            "as": "date"
        },
        {
            "calculate": "(datum.cases_new / 32657400) * 1000",
            "as": "cases_percentage"
        },
        {
            "calculate": "(datum.cumul_full / 32657400) * 1000",
            "as": "full_percentage"
        },
        {
            "calculate": "-(datum.cases_recovered)",
            "as": "recovered_flip"
        },
        {
            "calculate": "datum.cases_new - datum.cases_recovered",
            "as": "difference"
        }
    ],
    "vconcat": [
        {
            "width": 888,
            "height": "container",
            "layer":[
                {
                    "mark": {
                        "type": "area",
                        "size": 10,
                        "color": "#f1faff",
                        "interpolate": "natural",
                        "line":{
                            "color": "#009ef7"
                        }
                    },
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal",
                            "axis": {
                                "title": null,
                                "grid": false
                            }
                        },
                        "y": {
                            "field": "cases_new",
                            "type": "quantitative",
                            "axis": {
                                "title": "Daily Recoveries              Daily new cases",
                                "labelFont": "Roboto",
                                "labelFontSize": 15,
                                "titleFont": "Roboto",
                                "titleFontSize": 15
                            }
                        }
                    }
                },
                {
                    "mark": {
                        "type": "area",
                        "color": "#e8fff3",
                        "size": 10,
                        "line":{
                            "color": "#50cd89"
                        }
                    },
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal"
                        },
                        "y": {
                            "field": "recovered_flip",
                            "type": "quantitative"
                        }
                    }
                },
                {
                    "mark": {
                        "type": "area",
                        "size": 10,
                        "color": "grey"
                    },
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal",
                            "scale": {
                                "domain": {
                                    "param": "brush"
                                }
                            }
                        },
                        "y": {
                            "field": "difference",
                            "type": "quantitative"
                        }
                    }
                },
                {
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal",
                            "axis": {
                                "title": null,
                                "grid": false
                            },
                            "scale": {
                                "domain": {
                                    "param": "brush"
                                }
                            }
                        },
                        "y": {
                            "field": "cases_new",
                            "type": "quantitative"
                        },
                        "tooltip": [
                            {
                                "field": "date",
                                "title": "Date",
                                "timeUnit": "monthdate"
                            },
                            {
                                "field": "cases_percentage",
                                "format": ".2f",
                                "title": "Total Cases per 1K Pop"
                            },
                            {
                                "field": "cases_new",
                                "title": "Raw Number of Cases"
                            }
                        ]
                    },
                    "layer": [
                        {
                            "params": [
                                {
                                    "name": "label",
                                    "select": {
                                        "type": "point",
                                        "encodings": [
                                            "x"
                                        ],
                                        "nearest": true,
                                        "on": "mouseover"
                                    }
                                }
                            ],
                            "mark": {
                                "type": "point"
                            },
                            "encoding": {
                                "opacity": {
                                    "condition": {
                                        "param": "label",
                                        "empty": false,
                                        "value": 1
                                    },
                                    "value": 0
                                }
                            }
                        }
                    ]
                },
                {
                    "transform": [
                        {
                            "filter": {
                                "param": "label",
                                "empty": false
                            }
                        },
                        {
                            "filter": {
                                "param": "brush"
                            }
                        }
                    ],
                    "layer": [
                        {
                            "mark": {
                                "type": "rule",
                                "strokeDash": [
                                    7,
                                    7
                                ],
                                "strokeWidth": 2
                            },
                            "encoding": {
                                "x": {
                                    "type": "temporal",
                                    "field": "date",
                                    "scale": {
                                        "domain": {
                                            "param": "brush"
                                        }
                                    }
                                }
                            }
                        }
                    ]
                }
            ]
        },
        {
            "width": 888,
            "height": 60,
            "layer": [
                {
                    "title": "Drag to filter out an interval",
                    "mark": {
                        "type": "area",
                        "color": "#f1faff",
                        "cursor": "col-resize"
                    },
                    "params": [
                        {
                            "name": "brush",
                            "select": {
                                "type": "interval",
                                "encodings": [
                                    "x"
                                ]
                            }
                        }
                    ],
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal"
                        },
                        "y": {
                            "field": "cases_new",
                            "type": "quantitative",
                            "axis": {
                                "title": null,
                                "tickCount": 3,
                                "grid": false
                            }
                        }
                    }
                },
                {
                    "mark": {
                        "type": "area",
                        "color": "#e8fff3",
                        "cursor": "col-resize"
                    },
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal"
                        },
                        "y": {
                            "field": "recovered_flip",
                            "type": "quantitative",
                            "axis": {
                                "title": null,
                                "tickCount": 3,
                                "grid": false
                            }
                        }
                    }
                },
                {
                    "mark": {
                        "type": "area",
                        "color": "grey",
                        "cursor": "col-resize"
                    },
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal"
                        },
                        "y": {
                            "field": "difference",
                            "type": "quantitative",
                            "axis": {
                                "title": null,
                                "tickCount": 3,
                                "grid": false
                            }
                        }
                    }
                }
            ]
        }
    ]
}