{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/multipletwigs/Malaysia-COVID-Analysis/main/COVID-Data/COVID-19%20Statistics/epidemic/cases_malaysia.csv"
    },
    "transform": [
        {
            "calculate": "timeParse(datum['date'], '%d/%m/%Y')",
            "as": "date"
        },
        {
            "calculate": "(datum.cases_new / 32657400) * 1000",
            "as": "cases_percentage"
        },
        {
            "calculate": "datum.cases_new - 10",
            "as": "cases_line"
        },
        {
            "calculate": "(datum.cumul_full / 32657400) * 1000",
            "as": "full_percentage"
        },
        {
            "calculate": "-(datum.cases_recovered)",
            "as": "recovered_flip"
        },
        {
            "calculate": "datum.cases_new - datum.cases_recovered",
            "as": "difference"
        }
    ],
    "vconcat": [
        {
            "width": 888,
            "height": "container",
            "layer":[
                {
                    "mark": {
                        "type": "bar",
                        "size": 2,
                        "color": "#c6dffe"
                    },
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal",
                            "axis": {
                                "title": "null",
                                "labelFont": "Roboto",
                                "labelFontSize": 12
                            }
                        },
                        "y": {
                            "field": "cases_new",
                            "type": "quantitative",
                            "axis": {
                                "title": "Daily New Cases (Malaysia)",
                                "labelFont": "Roboto",
                                "labelFontSize": 15,
                                "titleFont": "Roboto",
                                "titleFontSize": 15
                            },
                            "scale": {"domain": [0,30000]}
                        }
                    }
                },
                {
                    "mark": {
                        "type": "line",
                        "size": 2,
                        "color": "#1b6d56"
                    },
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal",
                            "axis": {
                                "title": "null",
                                "labelFont": "Roboto",
                                "labelFontSize": 12
                            }
                        },
                        "y": {
                            "field": "cases_recovered",
                            "type": "quantitative",
                            "axis": {
                                "title": "Daily New Cases (Malaysia)",
                                "labelFont": "Roboto",
                                "labelFontSize": 15,
                                "titleFont": "Roboto",
                                "titleFontSize": 15,
                                "gridDash": [7,7]
                            },
                            "scale": {"domain": [0, 30000]}
                        }
                    }
                },
                {
                    "transform": [
                        {
                          "filter": {"param":"brush"}
                        }
                      ],
                      "mark":{
                          "type": "text",
                          "dx": -120,
                          "dy": -130,
                          "font": "Roboto",
                          "fontSize": 15,
                          "fontWeight": "bold"
                      },
                      "encoding": {
                          "text": {
                              "aggregate":"max",
                              "field": "cases_new"
                          }
                      }
                },
                {
                    "transform": [

                        {
                          "filter": {"param":"brush"}
                        }
                      ],
                      "mark":{
                        "type": "text",
                        "dx": -290,
                        "dy": -110,
                        "font": "Roboto",
                        "fontSize": 15,
                        "fontWeight": "bold"
                      },
                      "encoding": {
                          "text": {
                              "aggregate": "min",
                              "field": "date",
                              "timeUnit":"monthdate"
                          }
                      }
                },
                {
                    "transform": [

                        {
                          "filter": {"param":"brush"}
                        }
                      ],
                      "mark":{
                        "type": "text",
                        "dx": -220,
                        "dy": -110,
                        "font": "Roboto",
                        "fontSize": 15,
                        "fontWeight": "bold"
                      },
                      "encoding": {
                          "text": {
                              "aggregate": "max",
                              "field": "date",
                              "timeUnit":"monthdate"
                          }
                      }
                },
                {
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal",
                            "axis": {
                                "title": null,
                                "grid": false
                            },
                            "scale": {
                                "domain": {
                                    "param": "brush"
                                }
                            }
                        },
                        "y": {
                            "field": "cases_new",
                            "type": "quantitative"
                        },
                        "tooltip": [
                            {
                                "field": "date",
                                "title": "Date",
                                "timeUnit": "monthdate"
                            },
                            {
                                "field": "cases_percentage",
                                "format": ".2f",
                                "title": "Total Cases per 1K Pop"
                            },
                            {
                                "field": "cases_new",
                                "title": "Raw Number of Cases"
                            }
                        ]
                    },
                    "layer": [
                        {
                            "params": [
                                {
                                    "name": "label",
                                    "select": {
                                        "type": "point",
                                        "encodings": [
                                            "x"
                                        ],
                                        "nearest": true,
                                        "on": "mouseover"
                                    }
                                }
                            ],
                            "mark": {
                                "type": "point"
                            },
                            "encoding": {
                                "opacity": {
                                    "condition": {
                                        "param": "label",
                                        "empty": false,
                                        "value": 1
                                    },
                                    "value": 0
                                }
                            }
                        }
                    ]
                },
                {
                    "transform": [
                        {
                            "filter": {
                                "param": "label",
                                "empty": false
                            }
                        },
                        {
                            "filter": {
                                "param": "brush"
                            }
                        }
                    ],
                    "layer": [
                        {
                            "mark": {
                                "type": "rule",
                                "strokeDash": [
                                    7,
                                    7
                                ],
                                "strokeWidth": 2
                            },
                            "encoding": {
                                "x": {
                                    "type": "temporal",
                                    "field": "date",
                                    "scale": {
                                        "domain": {
                                            "param": "brush"
                                        }
                                    }
                                }
                            }
                        }
                    ]
                },
                {
                    "transform": [
                        {
                          "filter": "datum.cases_new == 24599"
                        }
                      ],
                      "mark":{
                        "type": "text",
                        "dx": -290,
                        "dy": -130,
                        "font": "Roboto",
                        "fontSize": 15,
                        "fontWeight": "bold"
                    },
                    "encoding": {
                        "text": {
                            "value": "Maximum number of cases within period: "
                        }
                    }
                },
                {
                    "transform": [
                        {
                          "filter": "datum.cases_new == 24599"
                        }
                      ],
                      "mark":{
                        "type": "text",
                        "dx": -374,
                        "dy": -110,
                        "font": "Roboto",
                        "fontSize": 15,
                        "fontWeight": "bold"
                    },
                    "encoding": {
                        "text": {
                            "value": "Selected Period: "
                        }
                    }
                },
                {
                    "transform": [
                        {
                          "filter": "datum.cases_new == 24599"
                        }
                      ],
                      "mark":{
                        "type": "text",
                        "dx": -255,
                        "dy": -110,
                        "font": "Roboto",
                        "fontSize": 15,
                        "fontWeight": "bold"
                    },
                    "encoding": {
                        "text": {
                            "value": "to"
                        }
                    }
                }
            ]
        },
        {
            "width": 888,
            "height": 50,
            "layer": [
                {
                    "title": "Drag to filter out an interval",
                    "mark": {
                        "type": "bar",
                        "color": "#f1faff",
                        "cursor": "col-resize"
                    },
                    "params": [
                        {
                            "name": "brush",
                            "select": {
                                "type": "interval",
                                "encodings": [
                                    "x"
                                ]
                            }
                        }
                    ],
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal",
                            "axis":{
                                "grid": false
                            }
                        },
                        "y": {
                            "field": "cases_new",
                            "type": "quantitative",
                            "axis": {
                                "title": null,
                                "tickCount": 3,
                                "grid": false
                            }
                        }
                    }
                },
                {
                    "mark": {
                        "type": "line",
                        "color": "#1b6d56",
                        "cursor": "col-resize"
                    },
                    "encoding": {
                        "x": {
                            "field": "date",
                            "type": "temporal"
                        },
                        "y": {
                            "field": "cases_recovered",
                            "type": "quantitative",
                            "axis": {
                                "title": null,
                                "tickCount": 3,
                                "grid": false
                            }
                        }
                    }
                }
            ]
        }
    ],
    "config": {
        "style": {
            "cell": {
                "stroke": "transparent"
            }
        }
    }
}