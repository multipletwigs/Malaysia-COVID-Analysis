{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/multipletwigs/Malaysia-COVID-Analysis/main/COVID-Data/COVID-19%20Statistics/epidemic/cases_from.csv"
    },
    "transform": [
        {"calculate": "(datum.total_cases/396346) * 100", "as": "percentage_from"}
    ],
    "width": "container",
    "height": 10,
    "layer": [
        {
            "mark": {
                "type": "bar",
                "size": 50,
                "tooltip": true
            },
            "encoding": {
                "x": {
                    "field": "percentage_from",
                    "type": "quantitative",
                    "axis":null
                },
                "color":{
                    "field": "case type",
                    "type": "nominal",
                    "legend": null
                }
            }
        }
    ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}