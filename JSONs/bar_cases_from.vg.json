{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/multipletwigs/Malaysia-COVID-Analysis/main/COVID-Data/COVID-19%20Statistics/epidemic/cases_from.csv"
    },
    "transform": [
        {"calculate": "(datum.total_cases/396346) * 100", "as": "percentage_from"}
    ],
    "width": "container",
    "height": 10,
    "layer": [
        {
            "mark": {
                "type": "bar",
                "size": 50,
                "tooltip": true
            },
            "encoding": {
                "x": {
                    "field": "percentage_from",
                    "type": "quantitative",
                    "axis": {"format": ".2f","ticks": false, "title":null},
                    "sort":"descending"
                },
                "color":{
                    "field": "case type",
                    "type": "nominal",
                    "legend":{
                        "title":"Case Types",
                        "titleFontSize": 20,
                        "titleFont":"Roboto",
                        "orient": "bottom",
                        "direction": "horizontal",
                        "columns": 7,
                        "labelFont": "Roboto",
                        "labelFontSize": 15,
                        "symbolSize": 500
                    }
                }
            }
        }
    ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  }
}