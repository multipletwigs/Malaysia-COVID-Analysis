{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
      "view": {
         "stroke": "transparent"
      }
    },
    "width": 987,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/multipletwigs/FIT3179-Data-Visualization/main/Week%209%20Homework/Layout/JSONs/malaysia_singapore_brunei_administrative_malaysia_state_province_boundary.json",
      "format": {
        "type": "topojson",
        "feature": "malaysia_singapore_brunei_administrative_malaysia_state_province_boundary"
      }
    },
    "transform": [{
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/multipletwigs/FIT3179-Data-Visualization/main/Week%209%20Homework/Datasets/Covid-19%20Vaccinations/vaccination/test.csv"
        },
        "key": "state",
        "fields": ["daily_full", "pop", "cumul_full"]
      }
    },
    {
      "calculate": "datum.cumul_full/datum.pop * 1000", "as":"Fully Vaccinated Per 1K Population"
    },
    {
      "calculate": "datum.cumul_full/datum.pop", "as":"Percentage Vaccinated"
    }
  ],
  
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black"
    },
  "encoding": {
    "color": {
      "field": "Fully Vaccinated Per 1K Population",
      "type": "quantitative",
      "scale": {"type": "log"},
      "legend": { "direction": "horizontal",
                  "orient": "bottom-left",
                  "title": "Fully Vaxed per 1K pop"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "Fully Vaccinated Per 1K Population", "type": "quantitative", "format": ".2f"},
      {"field": "Percentage Vaccinated", "type":"quantitative", "format":".0%"}
    ]
  }
}