{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "autosize": {
    "resize": true
  },
  "data": {
    "url": "https://raw.githubusercontent.com/multipletwigs/FIT3179-Data-Visualization/main/Week%209%20Homework/Layout/JSONs/malaysia_singapore_brunei_administrative_malaysia_state_province_boundary.json",
    "format": {
      "type": "topojson",
      "feature": "malaysia_singapore_brunei_administrative_malaysia_state_province_boundary"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/multipletwigs/Malaysia-COVID-Analysis/main/COVID-Data/COVID-19%20Statistics/epidemic/cases_state_21.csv"
        },
        "key": "state",
        "fields": [
          "cases_new",
          "Population Density",
          "Average Cases",
          "state"
        ]
      }
    },
    {
      "calculate": "datum['Population Density']/datum['Average Cases'] * 100",
      "as": "Severity Measure"
    }
  ],
  "vconcat": [
    {
      "width": "container",
      "height": "container",
      "layer": [
        {
          "projection": {
            "type": "equirectangular"
          },
          "mark": {
            "type": "geoshape",
            "stroke": "black"
          },
          "encoding": {
            "color": {
              "field": "Severity Measure",
              "type": "quantitative",
              "scale": {
                "type": "log",
                "scheme": "lightmulti"
              },
              "legend": {
                "direction": "horizontal",
                "orient": "bottom",
                "title": "Severity Measure",
                "labelFont": "Roboto",
                "labelFontSize":15,
                "titleFont": "Roboto",
                "titleFontSize": 15,
                "gradientLength": 300
              }
            },
            "tooltip": [
              {
                "field": "properties.name",
                "type": "nominal",
                "title": "State"
              },
              {
                "field":"Severity Measure",
                "type":"quantitative",
                "format": ".2f"
              }
            ]
          },
          "title": {
            "text": "Average cases in October against Population Density",
            "font": "Roboto",
                "fontSize": 15
          }
        }
      ]
    }
  ]
}